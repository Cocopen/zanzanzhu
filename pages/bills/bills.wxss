/* pages/bills/bills.wxss */
@import "../../theme.wxss";
@import "../../animation.wxss";

.container {
  min-height: 100vh;
  padding: 48rpx 24rpx 200rpx;
}

/* 顶部标题 */
.header-section {
  padding: 32rpx 0 48rpx;
}

.title-section {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

/* 筛选栏 */
.filter-bar {
  margin-bottom: 24rpx;
}

.filter-card {
  display: flex;
  padding: 8rpx;
  border-radius: 32rpx;
  background: #f2f2f7;
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  border-radius: 24rpx;
  transition: all 0.3s ease;
}

.filter-item.active {
  background: #fff;
  box-shadow: 0 4px 16px rgba(0, 113, 227, 0.15);
}

.filter-text {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--apple-gray-1);
}

.filter-item.active .filter-text {
  color: var(--apple-blue);
  font-weight: 600;
}

/* 月份选择 */
.month-selector {
  margin-bottom: 32rpx;
}

.month-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  border-radius: 48rpx;
}

.month-text {
  flex: 1;
  text-align: center;
}

.icon-arrow-left,
.icon-arrow-right {
  font-size: 32rpx;
  color: var(--apple-blue);
  padding: 0 24rpx;
}

/* 账单列表 */
.bills-section {
  margin-bottom: 32rpx;
}

.bill-group {
  margin-bottom: 48rpx;
}

.group-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 8rpx;
  margin-bottom: 16rpx;
}

.group-date {
  font-size: 30rpx;
  font-weight: 600;
}

.group-total {
  font-size: 24rpx;
}

.bills-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.bill-item {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 32rpx;
  background: #fff;
  border-radius: 24rpx;
  transition: all 0.3s ease;
}

.bill-item:active {
  transform: scale(0.98);
  background: var(--bg-gradient);
}

.bill-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.bill-icon-text {
  font-size: 48rpx;
  line-height: 1;
}

.bill-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  min-width: 0;
}

.bill-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.bill-name {
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.bill-amount {
  font-size: 32rpx;
  flex-shrink: 0;
}

.bill-detail {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.bill-account,
.bill-time {
  font-size: 24rpx;
}

.bill-remark {
  padding: 12rpx 16rpx;
  background: #f2f2f7;
  border-radius: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.bill-arrow {
  flex-shrink: 0;
}

.icon-arrow {
  font-size: 48rpx;
  color: var(--apple-gray-1);
  font-weight: 300;
}

/* 统计卡片 */
.stats-card {
  margin-bottom: 32rpx;
}

.stats-content {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 24rpx;
  background: #f2f2f7;
  border-radius: 20rpx;
}

.stat-label {
  font-size: 26rpx;
}

.stat-value {
  font-size: 36rpx;
  line-height: 1.2;
}

/* 快速记账按钮 */
.fab {
  position: fixed;
  bottom: 160rpx;
  right: 32rpx;
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--apple-blue), var(--apple-blue-light));
  box-shadow: 0 12px 40px rgba(0, 113, 227, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.fab:active {
  transform: scale(0.9);
  box-shadow: 0 8px 24px rgba(0, 113, 227, 0.3);
}

.fab-icon {
  font-size: 72rpx;
  color: #fff;
  font-weight: 300;
  line-height: 1;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .bill-icon {
    width: 80rpx;
    height: 80rpx;
  }
  
  .bill-icon-text {
    font-size: 40rpx;
  }
  
  .bill-name,
  .bill-amount {
    font-size: 28rpx;
  }
  
  .stats-content {
    grid-template-columns: 1fr;
  }
}
