/* pages/add/add.wxss */
@import "../../theme.wxss";
@import "../../animation.wxss";

.container {
  min-height: 100vh;
  padding: 32rpx 24rpx 40rpx;
}

/* 收支类型切换 */
.type-switch {
  display: flex;
  padding: 8rpx;
  border-radius: 32rpx;
  background: #f2f2f7;
  margin-bottom: 48rpx;
}

.switch-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 24rpx;
  transition: all 0.3s ease;
}

.switch-item.active {
  background: #fff;
  box-shadow: 0 4px 16px rgba(0, 113, 227, 0.15);
}

.switch-text {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--apple-gray-1);
}

.switch-item.active .switch-text {
  color: var(--apple-blue);
  font-weight: 600;
}

/* 金额输入区域 */
.amount-section {
  margin-bottom: 48rpx;
}

.amount-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 48rpx 0;
}

.amount-symbol {
  font-size: 96rpx;
  font-weight: 600;
  color: var(--apple-blue);
  margin-right: 16rpx;
}

.amount-input {
  font-size: 96rpx;
  font-weight: 600;
  color: var(--apple-black);
  text-align: center;
  flex: 1;
  min-height: 120rpx;
}

.amount-input::placeholder {
  color: var(--apple-gray-3);
}

/* 分类选择 */
.category-section {
  margin-bottom: 48rpx;
}

.section-title {
  margin-bottom: 24rpx;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx 16rpx;
  border-radius: 24rpx;
  transition: all 0.3s ease;
  background: #fff;
  border: 2rpx solid transparent;
}

.category-item.active {
  border-color: var(--apple-blue);
  box-shadow: 0 4px 16px rgba(0, 113, 227, 0.15);
}

.category-item:active {
  transform: scale(0.95);
}

.category-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.category-icon-text {
  font-size: 48rpx;
  line-height: 1;
}

.category-name {
  font-size: 26rpx;
  text-align: center;
}

/* 附加选项 */
.options-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 48rpx;
}

.option-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  background: #fff;
  border-radius: 24rpx;
  transition: all 0.3s ease;
}

.option-item:active {
  transform: scale(0.98);
  background: var(--bg-gradient);
}

.option-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.option-icon-wrapper {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #f2f2f7, #e5e5ea);
  display: flex;
  align-items: center;
  justify-content: center;
}

.option-icon {
  font-size: 32rpx;
}

.option-label {
  font-size: 30rpx;
  font-weight: 500;
}

.option-right {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.option-value {
  font-size: 30rpx;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.option-arrow {
  font-size: 48rpx;
  color: var(--apple-gray-1);
  font-weight: 300;
}

/* 提交按钮 */
.submit-section {
  padding-top: 24rpx;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 36rpx;
  font-weight: 600;
  border-radius: 48rpx;
  background: linear-gradient(135deg, var(--apple-blue), var(--apple-blue-light));
  color: #fff;
  border: none;
  padding: 0;
  margin: 0;
  box-shadow: 0 8px 32px rgba(0, 113, 227, 0.3);
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4px 16px rgba(0, 113, 227, 0.2);
}

.submit-btn[disabled] {
  background: var(--apple-gray-4);
  box-shadow: none;
  color: var(--apple-gray-1);
}

/* 底部弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  z-index: 9999;
}

.modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 100%;
  max-height: 80vh;
  border-radius: 48rpx 48rpx 0 0;
  padding: 48rpx 32rpx;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
}

.modal-close {
  font-size: 64rpx;
  color: var(--apple-gray-1);
  line-height: 1;
  padding: 0 16rpx;
}

.modal-body {
  margin-bottom: 32rpx;
}

.remark-input {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  background: #f2f2f7;
  border-radius: 24rpx;
  font-size: 30rpx;
  line-height: 1.6;
}

.remark-input::placeholder {
  color: var(--apple-gray-1);
}

.modal-footer {
  display: flex;
  gap: 24rpx;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .amount-symbol,
  .amount-input {
    font-size: 80rpx;
  }
  
  .category-icon {
    width: 80rpx;
    height: 80rpx;
  }
  
  .category-icon-text {
    font-size: 40rpx;
  }
}
