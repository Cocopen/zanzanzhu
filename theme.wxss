/* 主题颜色变量 */
:root {
  /* Apple 标准蓝色 */
  --apple-blue: #0071e3;
  --apple-blue-light: #2997ff;
  --apple-blue-dark: #005bb5;
  
  /* 中性色 */
  --apple-black: #1d1d1f;
  --apple-gray-1: #86868b;
  --apple-gray-2: #a1a1a6;
  --apple-gray-3: #d2d2d7;
  --apple-gray-4: #e5e5ea;
  --apple-gray-5: #f2f2f7;
  
  /* 背景色 */
  --bg-light: #fafdff;
  --bg-gradient: linear-gradient(135deg, #fafdff 0%, #e3f0ff 100%);
  --bg-gradient-dark: linear-gradient(135deg, #1d1d1f 0%, #2d2d2f 100%);
  
  /* 功能色 */
  --color-success: #34c759;
  --color-warning: #ff9500;
  --color-error: #ff3b30;
  --color-info: #0071e3;
  
  /* 阴影 */
  --shadow-sm: 0 2px 8px rgba(0, 113, 227, 0.08);
  --shadow-md: 0 4px 16px rgba(0, 113, 227, 0.1);
  --shadow-lg: 0 8px 32px rgba(0, 113, 227, 0.12);
  --shadow-xl: 0 16px 64px rgba(0, 113, 227, 0.15);
  
  /* 圆角 */
  --radius-sm: 12rpx;
  --radius-md: 24rpx;
  --radius-lg: 32rpx;
  --radius-xl: 48rpx;
  --radius-full: 999rpx;
  
  /* 间距 */
  --space-xs: 8rpx;
  --space-sm: 16rpx;
  --space-md: 24rpx;
  --space-lg: 32rpx;
  --space-xl: 48rpx;
  --space-2xl: 64rpx;
  
  /* 字体 */
  --font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Text', 'Helvetica Neue', Arial, sans-serif;
  
  /* 过渡 */
  --transition-fast: 0.2s ease;
  --transition-base: 0.3s ease;
  --transition-slow: 0.5s ease;
}

/* 深色模式变量 */
[data-theme='dark'] {
  --apple-black: #f5f5f7;
  --apple-gray-1: #a1a1a6;
  --apple-gray-2: #86868b;
  --apple-gray-3: #636366;
  --apple-gray-4: #48484a;
  --apple-gray-5: #2c2c2e;
  
  --bg-light: #000000;
  --bg-gradient: var(--bg-gradient-dark);
  
  --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.3);
  --shadow-md: 0 4px 16px rgba(0, 0, 0, 0.4);
  --shadow-lg: 0 8px 32px rgba(0, 0, 0, 0.5);
  --shadow-xl: 0 16px 64px rgba(0, 0, 0, 0.6);
}

/* 渐变文字类 */
.gradient-text {
  background: linear-gradient(135deg, var(--apple-blue), var(--apple-blue-light));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.gradient-text-green {
  background: linear-gradient(135deg, #30d158, #34c759);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.gradient-text-orange {
  background: linear-gradient(135deg, #ff9500, #ff6b00);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* 渐变背景类 */
.gradient-bg {
  background: linear-gradient(135deg, var(--apple-blue), var(--apple-blue-light));
}

.gradient-bg-soft {
  background: linear-gradient(135deg, #e3f0ff 0%, #fafdff 100%);
}

/* 毛玻璃效果增强 */
.glass-enhanced {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(30px) saturate(180%);
  -webkit-backdrop-filter: blur(30px) saturate(180%);
  border: 1rpx solid rgba(255, 255, 255, 0.4);
}

/* 动画类 */
.fade-in {
  animation: fadeIn 0.6s ease;
}

.slide-up {
  animation: slideUp 0.6s ease;
}

.slide-down {
  animation: slideDown 0.6s ease;
}

.slide-left {
  animation: slideLeft 0.6s ease;
}

.slide-right {
  animation: slideRight 0.6s ease;
}

.scale-in {
  animation: scaleIn 0.4s ease;
}

.pulse {
  animation: pulse 2s ease infinite;
}

/* 自定义动画关键帧 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes slideDown {
  from {
    transform: translateY(-100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes slideLeft {
  from {
    transform: translateX(100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

@keyframes slideRight {
  from {
    transform: translateX(-100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

@keyframes scaleIn {
  from {
    transform: scale(0.8);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

/* 悬停效果 */
.hover-lift {
  transition: all var(--transition-base);
}

.hover-lift:active {
  transform: translateY(-8rpx);
  box-shadow: var(--shadow-xl);
}

/* 骨架屏动画 */
.skeleton {
  background: linear-gradient(90deg, #f2f2f7 25%, #e5e5ea 50%, #f2f2f7 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease infinite;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* 波纹效果 */
.ripple {
  position: relative;
  overflow: hidden;
}

.ripple::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.ripple:active::after {
  width: 300%;
  height: 300%;
}
