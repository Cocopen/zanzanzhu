/* 全局样式变量 */
page {
  --apple-blue: #0071e3;
  --apple-light-blue: #2997ff;
  --apple-gray: #86868b;
  --apple-black: #1d1d1f;
  --bg-light: #fafdff;
  --bg-gradient: linear-gradient(135deg, #fafdff 0%, #e3f0ff 100%);
  --card-shadow: 0 12px 48px rgba(0, 113, 227, 0.08);
  --card-shadow-hover: 0 20px 60px rgba(0, 113, 227, 0.15);
  --border-radius-card: 32rpx;
  --border-radius-large: 48rpx;
  
  background: var(--bg-gradient);
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Text', 'Helvetica Neue', Arial, sans-serif;
  color: var(--apple-black);
  font-size: 28rpx;
  line-height: 1.6;
}

/* 全局容器 */
.container {
  min-height: 100vh;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 大标题样式 */
.title-large {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--apple-blue);
  background: linear-gradient(90deg, #0071e3, #2997ff);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 16rpx;
}

.title-medium {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--apple-black);
  margin-bottom: 12rpx;
}

.title-small {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--apple-black);
  margin-bottom: 8rpx;
}

/* 副标题样式 */
.subtitle {
  font-size: 28rpx;
  font-weight: 400;
  color: var(--apple-gray);
  margin-bottom: 32rpx;
}

/* 卡片样式 */
.card {
  background: linear-gradient(135deg, #fff 60%, #f5f6fa 100%);
  border-radius: var(--border-radius-card);
  box-shadow: var(--card-shadow);
  padding: 32rpx;
  margin: 24rpx;
  transition: all 0.3s ease;
}

.card:active {
  transform: scale(0.98);
  box-shadow: var(--card-shadow-hover);
}

.card-large {
  border-radius: var(--border-radius-large);
  padding: 48rpx;
}

/* 按钮样式 */
.btn {
  background: linear-gradient(135deg, var(--apple-blue), var(--apple-light-blue));
  color: #fff;
  border-radius: 24rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  border: none;
  transition: all 0.3s ease;
  box-shadow: 0 8px 24px rgba(0, 113, 227, 0.25);
}

.btn:active {
  transform: scale(0.95);
  box-shadow: 0 4px 12px rgba(0, 113, 227, 0.15);
}

.btn-secondary {
  background: #fff;
  color: var(--apple-blue);
  border: 2rpx solid var(--apple-blue);
  box-shadow: none;
}

.btn-ghost {
  background: transparent;
  color: var(--apple-blue);
  border: none;
  box-shadow: none;
}

/* 输入框样式 */
.input {
  width: 100%;
  height: 96rpx;
  font-size: 48rpx;
  font-weight: 600;
  text-align: center;
  border-bottom: 2rpx solid rgba(0, 113, 227, 0.2);
  background: transparent;
  color: var(--apple-black);
  transition: all 0.3s ease;
}

.input:focus {
  border-bottom-color: var(--apple-blue);
}

.input-placeholder {
  color: rgba(134, 134, 139, 0.5);
}

/* 图标样式 */
.icon {
  width: 48rpx;
  height: 48rpx;
}

.icon-large {
  width: 64rpx;
  height: 64rpx;
}

.icon-gradient {
  background: linear-gradient(135deg, var(--apple-blue), var(--apple-light-blue));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* 毛玻璃效果 */
.glass {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.glass-dark {
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  color: #fff;
}

/* Flex布局 */
.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-start {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.flex-end {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-wrap {
  flex-wrap: wrap;
}

/* 间距 */
.mt-sm { margin-top: 16rpx; }
.mt-md { margin-top: 24rpx; }
.mt-lg { margin-top: 32rpx; }
.mt-xl { margin-top: 48rpx; }

.mb-sm { margin-bottom: 16rpx; }
.mb-md { margin-bottom: 24rpx; }
.mb-lg { margin-bottom: 32rpx; }
.mb-xl { margin-bottom: 48rpx; }

.ml-sm { margin-left: 16rpx; }
.ml-md { margin-left: 24rpx; }

.mr-sm { margin-right: 16rpx; }
.mr-md { margin-right: 24rpx; }

/* 文本颜色 */
.text-blue { color: var(--apple-blue); }
.text-gray { color: var(--apple-gray); }
.text-black { color: var(--apple-black); }
.text-white { color: #fff; }
.text-green { color: #34c759; }
.text-red { color: #ff3b30; }

/* 字体大小 */
.text-xs { font-size: 24rpx; }
.text-sm { font-size: 26rpx; }
.text-base { font-size: 28rpx; }
.text-lg { font-size: 32rpx; }
.text-xl { font-size: 36rpx; }
.text-2xl { font-size: 48rpx; }
.text-3xl { font-size: 64rpx; }

/* 字体粗细 */
.font-normal { font-weight: 400; }
.font-medium { font-weight: 500; }
.font-semibold { font-weight: 600; }
.font-bold { font-weight: 700; }

/* 圆形按钮 */
.fab {
  position: fixed;
  bottom: 120rpx;
  right: 32rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--apple-blue), var(--apple-light-blue));
  box-shadow: 0 12px 32px rgba(0, 113, 227, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  transition: all 0.3s ease;
}

.fab:active {
  transform: scale(0.9);
  box-shadow: 0 6px 16px rgba(0, 113, 227, 0.3);
}

/* 分割线 */
.divider {
  height: 1rpx;
  background: linear-gradient(90deg, transparent, rgba(134, 134, 139, 0.2), transparent);
  margin: 24rpx 0;
}

/* 列表项 */
.list-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: #fff;
  border-radius: 24rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}

.list-item:active {
  transform: scale(0.98);
  background: #f5f6fa;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
  color: var(--apple-gray);
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
  color: var(--apple-gray);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.3;
}

/* 安全区域适配 */
.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
