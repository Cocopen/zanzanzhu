/* 动画样式文件 */

/* 淡入动画 */
@keyframes fadeIn {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

.anim-fade-in {
  animation: fadeIn 0.4s ease-out;
}

/* 淡出动画 */
@keyframes fadeOut {
  0% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}

.anim-fade-out {
  animation: fadeOut 0.4s ease-out;
}

/* 从下往上滑入 */
@keyframes slideInUp {
  0% {
    transform: translateY(100%);
    opacity: 0;
  }
  100% {
    transform: translateY(0);
    opacity: 1;
  }
}

.anim-slide-in-up {
  animation: slideInUp 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* 从上往下滑入 */
@keyframes slideInDown {
  0% {
    transform: translateY(-100%);
    opacity: 0;
  }
  100% {
    transform: translateY(0);
    opacity: 1;
  }
}

.anim-slide-in-down {
  animation: slideInDown 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* 从左往右滑入 */
@keyframes slideInRight {
  0% {
    transform: translateX(-100%);
    opacity: 0;
  }
  100% {
    transform: translateX(0);
    opacity: 1;
  }
}

.anim-slide-in-right {
  animation: slideInRight 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* 从右往左滑入 */
@keyframes slideInLeft {
  0% {
    transform: translateX(100%);
    opacity: 0;
  }
  100% {
    transform: translateX(0);
    opacity: 1;
  }
}

.anim-slide-in-left {
  animation: slideInLeft 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* 缩放进入 */
@keyframes scaleIn {
  0% {
    transform: scale(0.8);
    opacity: 0;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.anim-scale-in {
  animation: scaleIn 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* 缩放退出 */
@keyframes scaleOut {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  100% {
    transform: scale(0.8);
    opacity: 0;
  }
}

.anim-scale-out {
  animation: scaleOut 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* 旋转进入 */
@keyframes rotateIn {
  0% {
    transform: rotate(-180deg) scale(0);
    opacity: 0;
  }
  100% {
    transform: rotate(0) scale(1);
    opacity: 1;
  }
}

.anim-rotate-in {
  animation: rotateIn 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* 弹跳动画 */
@keyframes bounce {
  0%, 20%, 53%, 80%, 100% {
    transform: translate3d(0, 0, 0);
  }
  40%, 43% {
    transform: translate3d(0, -30rpx, 0);
  }
  70% {
    transform: translate3d(0, -15rpx, 0);
  }
  90% {
    transform: translate3d(0, -4rpx, 0);
  }
}

.anim-bounce {
  animation: bounce 1s ease infinite;
}

/* 脉冲动画 */
@keyframes pulse {
  0% {
    transform: scale(1);
    box-shadow: 0 0 0 0 rgba(0, 113, 227, 0.4);
  }
  70% {
    transform: scale(1.05);
    box-shadow: 0 0 0 20rpx rgba(0, 113, 227, 0);
  }
  100% {
    transform: scale(1);
    box-shadow: 0 0 0 0 rgba(0, 113, 227, 0);
  }
}

.anim-pulse {
  animation: pulse 2s ease infinite;
}

/* 闪烁动画 */
@keyframes flash {
  0%, 50%, 100% {
    opacity: 1;
  }
  25%, 75% {
    opacity: 0.3;
  }
}

.anim-flash {
  animation: flash 1.5s ease infinite;
}

/* 摇晃动画 */
@keyframes shake {
  0%, 100% {
    transform: translateX(0);
  }
  10%, 30%, 50%, 70%, 90% {
    transform: translateX(-10rpx);
  }
  20%, 40%, 60%, 80% {
    transform: translateX(10rpx);
  }
}

.anim-shake {
  animation: shake 0.8s ease;
}

/* 弹性动画 */
@keyframes elastic {
  0% {
    transform: scale(1);
  }
  30% {
    transform: scale(1.25);
  }
  40% {
    transform: scale(0.75);
  }
  50% {
    transform: scale(1.15);
  }
  65% {
    transform: scale(0.95);
  }
  75% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
  }
}

.anim-elastic {
  animation: elastic 1s ease;
}

/* 依次出现的动画 - 延迟类 */
.anim-delay-1 {
  animation-delay: 0.1s;
}

.anim-delay-2 {
  animation-delay: 0.2s;
}

.anim-delay-3 {
  animation-delay: 0.3s;
}

.anim-delay-4 {
  animation-delay: 0.4s;
}

.anim-delay-5 {
  animation-delay: 0.5s;
}

/* 无限循环 */
.anim-infinite {
  animation-iteration-count: infinite;
}

/* 线性缓动 */
.anim-linear {
  animation-timing-function: linear;
}

/* 缓入 */
.anim-ease-in {
  animation-timing-function: ease-in;
}

/* 缓出 */
.anim-ease-out {
  animation-timing-function: ease-out;
}

/* 缓入缓出 */
.anim-ease-in-out {
  animation-timing-function: ease-in-out;
}

/* 悬浮效果 */
@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

.anim-float {
  animation: float 3s ease-in-out infinite;
}

/* 卡片入场动画序列 */
.card-entrance {
  opacity: 0;
  animation: cardEntrance 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
}

@keyframes cardEntrance {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 数字增长动画 */
.number-growth {
  animation: numberGrowth 0.8s ease-out;
}

@keyframes numberGrowth {
  0% {
    opacity: 0;
    transform: scale(0.5);
  }
  50% {
    opacity: 1;
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}
